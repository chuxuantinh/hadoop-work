{
  "jsonSchema": {
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "info": {
        "type": "object",
        "title": "Platform info",
        "properties": {
          "id": {
            "title": "Id",
            "type": "string",
            "readonly": true
          },
          "title": {
            "title": "Title",
            "type": "string"
          },
          "distribution": {
            "title": "Version",
            "type": "string",
            "default": "KAFKA 0.9.0.1",
            "enum": [
              "KAFKA 0.9.0.1"
            ]
          },
          "location": {
            "title": "Location",
            "type": "string"
          }
        }
      },
      "apiAccess": {
        "type": "object",
        "title": "Platform API access",
        "properties": {
          "host": {
            "title": "Host",
            "type": "string"
          },
          "port": {
            "title": "Port",
            "type": "integer"
          },
          "protocol": {
            "title": "Protocol",
            "type": "string",
            "enum": ["http", "https"]
          }
        }
      }
    }
  }
}